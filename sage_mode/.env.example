# Sage Mode Environment Configuration
# Copy this file to .env and update the values

# === REQUIRED ===

# JWT secret key - MUST be set in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production

# === DATABASE ===

# SQLite database path (relative to project root)
DATABASE_URL=sqlite:///./sage_mode.db

# === OPTIONAL ===

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Comma-separated origins
# Default: http://localhost:3000,http://localhost:5173
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_API_READ=60/minute
RATE_LIMIT_API_WRITE=30/minute
RATE_LIMIT_LLM=10/minute

# Redis URL for rate limiting (optional, uses in-memory by default)
# REDIS_URL=redis://localhost:6379/0
