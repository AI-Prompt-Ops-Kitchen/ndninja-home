{
  "rules": [
    {
      "name": "hokage_block_tracker",
      "event_type": "hokage.blocked",
      "condition": {},
      "action": {
        "type": "log",
        "message": "[Hokage BLOCK] {payload.reason} | cmd={payload.command_preview}"
      },
      "cooldown_seconds": 0,
      "enabled": true
    },
    {
      "name": "hokage_warn_tracker",
      "event_type": "hokage.warned",
      "condition": {},
      "action": {
        "type": "log",
        "message": "[Hokage WARN] {payload.reason} | cmd={payload.command_preview}"
      },
      "cooldown_seconds": 0,
      "enabled": true
    }
  ],
  "schedules": [
    {
      "name": "hokage_weekly_review",
      "cron_expr": "0 20 * * 0",
      "event_type": "hokage.weekly_review",
      "source": "scheduler",
      "payload": {
        "task": "Review enforcement log, identify most-triggered edicts, check for false positives, suggest new edicts from recent mistakes"
      },
      "enabled": true
    }
  ]
}
